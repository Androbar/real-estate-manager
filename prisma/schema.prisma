generator client {
    provider = "prisma-client-js"
    output   = "./generated/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id         Int        @id @default(autoincrement())
    email      String     @unique
    name       String?
    properties Property[]
}

model Property {
    id      Int    @id @default(autoincrement())
    name    String
    address String
    type    String
    ownerId Int
    owner   User   @relation(fields: [ownerId], references: [id])
}
